<div class='main'>

<%= render "menu" %>

<%= form_with model: @item, class: 'form', local: true do |f| %>
  <div class="form-input">
    <%= f.text_field :name, class: 'form-message', placeholder: 'name' %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
    <%= f.text_field :description, class: 'form-message', placeholder: 'description' %>
    <%= f.text_field :url, class: 'form-message', placeholder: 'url' %>
  </div>
  <%= f.submit '送信', class: 'form-submit' %>
<% end %>

</div>