<link href='https://fonts.googleapis.com/css?family=Montserrat' rel='stylesheet' type='text/css'>
<body>

<div class="login">
  <h2 class="in"> sign in </h2>

  <h2><%= link_to 'sign up', new_user_registration_path, class:"out" %></h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
   
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"text" %>
     <div class="text-option">email</div>

    <br>
    
    <br>

    <%= f.password_field :password, autocomplete: "current-password", class:"text"%>
      <div class="text-option">password</div>
    <br>

    <input type="checkbox" id="checkbox-1-1" class="custom-checkbox" />
    <label for="checkbox-1-1">Keep me Signed in</label>
    
    <button class="signin">
      Sign In
    </button>


    <hr>

  <% end %>

</div>

</body>